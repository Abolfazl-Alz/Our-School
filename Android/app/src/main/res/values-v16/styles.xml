<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Style">
        <item name="android:fontFamily">@font/text</item>
        <item name="android:textViewStyle">@style/NormalTextViewStyle</item>
        <item name="android:buttonStyle">@style/NormalButtonStyle</item>
        <item name="android:editTextStyle">@style/NormalEditTextStyle</item>
        <item name="fontFamily">@font/text</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Style.NoActionBar">
        <item name="android:fontFamily">@font/text</item>
        <item name="android:textViewStyle">@style/NormalTextViewStyle</item>
        <item name="android:buttonStyle">@style/NormalButtonStyle</item>
        <item name="android:editTextStyle">@style/NormalEditTextStyle</item>
        <item name="fontFamily">@font/text</item>
    </style>

    <style name="NormalTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/text</item>
    </style>

    <style name="NormalButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/text</item>
    </style>

    <style name="NormalEditTextStyle" parent="android:Widget.Holo.EditText">
        <item name="android:fontFamily">@font/text</item>
    </style>

</resources>