<resources>

    <style name="AppTheme" parent="Style" />

    <style name="AppTheme.NoActionBar" parent="Style.NoActionBar" />

    <style name="Style" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textViewStyle">@style/Style.TextView</item>
        <item name="android:textColor">@color/colorTextView</item>
    </style>

    <style name="Style.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textViewStyle">@style/Style.TextView</item>
        <item name="android:textColor">@color/colorTextView</item>
    </style>

    <style name="Style.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextView</item>
    </style>

    <style name="Register.Field" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textSize">16sp</item>
        <item name="background">@drawable/register_field</item>
        <item name="hintTextColor">@color/hintTextColor</item>
    </style>

    <style name="StartingFormHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/headerTextColor</item>
    </style>

    <style name="Register.Field.ImageHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:src">@drawable/school_cartoon</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RegisterField.Header" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/headerTextColor</item>
    </style>

    <style name="RegisterField.Information" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="color">@color/headerTextColor</item>
    </style>

    <style name="Register.Field.PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="register_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/register_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="start_now_button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Style.Button.Primary" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Style.Button.Accent" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Style.Button.Borderless.Primary" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
